#include <cmath>
bool narcissistic( int v ){
  // contemos el número de digítos que tiene "value"
  int e = v;
  int a = 1;
  int b = 10;
  
  while (v - b >= 0){
    b = b * 10;
    a = a + 1;
  }
  
  
  int d = 0;
  int n = 1;
  while (n <= a - 1){
    
      int c = 1;
  while (v / c * pow(10,a - n) > 1){
    c = c + 1;
  }
  
  v = v - c * pow(10,a - n);
  d = d + pow(c * pow(10,a - n), a);
  
      n = n + 1;
  }  

    if (d == e)
      return true;
  else
    return false;
  
}
